{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@glass/widget": [
        "libs/widget/src/index.ts"
      ],
      "@glass/charts": [
        "libs/charts/src/index.ts"
      ],
      "@glass/layout": [
        "libs/layout/src/index.ts"
      ],
      "@glass/material": [
        "libs/material/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
